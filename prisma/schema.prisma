generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Trabalhos {
  id    String   @id @default(cuid())
  name  String
  text  String?
  image String[]
  tags  String[]
  type  String
  youtubeUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("trabalhos")
}

model Usuario {
  id                      String @id @default(cuid())
  name                    String
  text                    String
  behance                 String?
  linkedin                String?
  facebook                String?
  instagram               String?
  colorHeader             String @default("#ffffff")
  colorBackgroundIndex    String @default("#f8f9fa")
  colorBackgroundWorks    String @default("#ffffff")
  font                    String @default("Inter")
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  @@map("usuario")
}
